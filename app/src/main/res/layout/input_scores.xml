<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/input_scores">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="coursename"
        android:id="@+id/coursename"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/holetext"
        android:id="@+id/holetext"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/coursename"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/holenumber"
        android:layout_alignTop="@+id/holetext"
        android:layout_toEndOf="@+id/holetext"
        android:layout_marginStart="24dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/partext"
        android:id="@+id/partext"
        android:layout_alignTop="@+id/holenumber"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3"
        android:id="@+id/par"
        android:layout_alignTop="@+id/partext"
        android:layout_alignEnd="@+id/coursename"
        android:layout_gravity="center" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/holescores"
        android:layout_below="@+id/partext"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusbutton"
        android:text="@string/minusbutton"
        android:layout_alignTop="@+id/holescores"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3"
        android:id="@+id/textView"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/par"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/minusbutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusbutton"
        android:text="@string/plusbutton"
        android:layout_alignTop="@+id/holescores"
        android:layout_alignParentEnd="true" />

</RelativeLayout>