<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/input_scores">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/courseTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/holetext"
            android:id="@+id/holetext"
            android:layout_marginStart="35dp"
            android:layout_below="@+id/courseTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:layout_gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/holenumber"
            android:layout_alignTop="@+id/holetext"
            android:layout_toEndOf="@+id/holetext"
            android:layout_marginStart="24dp"
            android:layout_gravity="center" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scores_listView"
            android:layout_below="@+id/holetext"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp" />

    </RelativeLayout>