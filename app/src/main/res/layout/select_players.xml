<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/select_players">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="coursename"
        android:id="@+id/coursename"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/selectplayers"
        android:id="@+id/selectplayers"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/coursename"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pelaajalista"
        android:layout_below="@+id/selectplayers"
        android:choiceMode="multipleChoice"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newplayerbutton"
        android:id="@+id/newplayerbutton"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/startgamebutton"
        android:layout_alignEnd="@+id/coursename" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startgamebutton"
        android:id="@+id/startgamebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/newplayerbutton" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:id="@+id/player1"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/pelaajalista"
        android:layout_alignEnd="@+id/selectplayers"
        android:checked="false" />
</RelativeLayout>